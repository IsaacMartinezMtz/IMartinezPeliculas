@model ML.Producto
@{
    ViewData["Title"] = "ProductosGetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .product-grid{ font-family: 'Titillium Web', sans-serif; }
.product-grid .product-image{
    position: relative;
    overflow: hidden;
}
.product-grid .product-image a.image{ display: block; }
.product-grid .product-image img{
    width: 100%;
    height: auto;
    transition: all 0.3s ease 0s;
}
.product-grid .product-image:hover img{ opacity: 0.8; }
.product-grid .product-links{
    padding: 0;
    margin: 0;
    list-style: none;
    position: absolute;
    top: 10px;
    left: 13px;
}
.product-grid .product-links li{
    margin: 0 0 8px;
    opacity: 0;
    transform: translateX(20px);
    transition: all 0.3s ease 0s;
}
.product-grid .product-links li:nth-child(even){ transform: translateX(-20px); }
.product-grid:hover .product-links li{
    opacity: 1;
    transform: translateX(0);
}
.product-grid .product-links li a{
    color: #0775c0;
    background: #fff;
    font-size: 15px;
    text-align: center;
    line-height: 35px;
    width: 35px;
    height: 35px;
    box-shadow: 0 0 5px rgba(0,0,0,0.3);
    display: block;
    position: relative;
    transition: all 0.3s ease 0s;
}
.product-grid .product-links li a:hover{
    color: #fff;
    background: #0775c0;
}
.product-grid .product-links li a:before{
    content: '';
    height: 100%;
    width: 100%;
    border: 1px solid #0775c0;
    border-top: none;
    border-right: none;
    position: absolute;
    left: -4px;
    top: 4px;
    z-index: -1;
    transition: all 0.3s ease;
}
.product-grid .product-links li a:hover:before{
    left: 0;
    top: 0;
}
.product-grid .product-content{
    background: linear-gradient(transparent,#f5f5f5);
    padding: 10px;
}
.product-grid .title{
    font-size: 15px;
    font-weight: 700;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    margin: 0 0 3px;
}
.product-grid .title a{
    color: #333;
    transition: all 0.3s ease;
}
.product-grid .title a:hover{ color: #0775c0; }
.product-grid .price{
    color: #555;
    font-size: 15px;
    font-weight: 500;
}

</style>

<div class="text-lg-start">
    <h2>Dulceria</h2>
    <h5>Selecciona tus dulces favoritos</h5>
</div>
<hr />

<div class="row">
    @foreach(ML.Producto producto in Model.Productos)
    {
    <div class="col-md-3 col-sm-6">
        <div class="product-grid">
            <div class="product-image">
                <a href="" class="image">
                        <img class="pic-1" src="data:imagen/*;base64,@producto.Imagen">
                </a>
                <ul class="product-links">
                    <li><a href="#" data-tip="Add to Wishlist"><i class="fas fa-heart"></i></a></li>
                    <li><a href="#" data-tip="Quick View"><i class="fa fa-search"></i></a></li>
                    <li><a href="@Url.Action("AddCarrito","Dulceria", new {idProducto = producto.IdProducto})" data-tip="Add to Cart"><i class="fa fa-shopping-bag"></i></a></li>
                </ul>
            </div>
            <div class="product-content">
                <h3 class="title"><a href="#">@producto.Nombre</a></h3>
                <div class="price">$@producto.Precio</div>
            </div>
        </div>
    </div>
    }
    
</div>

