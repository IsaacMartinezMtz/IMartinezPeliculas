@model ML.Email
@{
    ViewData["Title"] = "VMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-lg-start">
    <h2>Mail</h2>
    <h5>Ingrese los datos del Email</h5>
</div>
<hr />

@using (Html.BeginForm("Form", "Email", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="container text-center">
    <div class="row">
        <div class="col">
            @Html.LabelFor(model => Model.Emails, new { @class = "hidden" })
            @Html.TextBoxFor(model => Model.Emails, new { @class = "form-control hidden" })
        </div>
        <div class="col">
            @Html.LabelFor(model => Model.Subject, new { @class = "hidden" })
            @Html.TextBoxFor(model => Model.Subject, new { @class = "form-control hidden" })
        </div>
        <div class="col">
            @Html.LabelFor(model => Model.Message, new { @class = "hidden" })
            @Html.TextBoxFor(model => Model.Message, new { @class = "form-control hidden" })
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="text-center" style="margin-top:25px">
        <button class="btn btn-success" type="submit"><i class="fa-solid fa-floppy-disk"></i> enviar</button>
        
    </div>
</div>
}
